{
    "version": 6,
    "configurePresets": [
        {
            "name": "debug",
            "binaryDir": "${sourceDir}/build_outputs/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_FLAGS_DEBUG": "-Og -g"
            }
        },
        {
            "name": "release",
            "binaryDir": "${sourceDir}/build_outputs/release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "configurePreset": "debug",
            "jobs": 19,
            "targets": [
                "all"
            ]
        },
        {
            "name": "release",
            "configurePreset": "release",
            "jobs": 19
        }
    ],
    "testPresets": [
        {
            "name": "release",
            "configurePreset": "release"
        }
    ],
    "workflowPresets": [
        {
            "name": "debug",
            "steps": [
                {
                    "type": "configure",
                    "name": "debug"
                },
                {
                    "type": "build",
                    "name": "debug"
                }
            ]
        },
        {
            "name": "release",
            "steps": [
                {
                    "type": "configure",
                    "name": "release"
                },
                {
                    "type": "build",
                    "name": "release"
                },
                {
                    "type": "test",
                    "name": "release"
                }
            ]
        }
    ]
}
